<Window x:Class="display.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:display"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid x:Name="HostGrid">
        <StackPanel Orientation="Vertical" Width="800" Height="450">
            <TextBlock Text="{Binding String1[0]}" Foreground="Black"/>
            <TextBlock Text="{Binding String1[1]}" Foreground="Black"/>
            <TextBlock Text="{Binding String1[2]}" Foreground="Black"/>
            <TextBlock Text="{Binding String1[3]}" Foreground="Black"/>
        </StackPanel>
    </Grid>
</Window>
