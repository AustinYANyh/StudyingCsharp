<Window x:Class="RadialGradientBrush.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RadialGradientBrush"
        mc:Ignorable="d"
        Title="MainWindow" Height="100" Width="75">
    <Grid>
        <Ellipse Width="50" Height="50">
            <Ellipse.Fill>
                <RadialGradientBrush GradientOrigin="0.3,0.2" RadiusX="1" RadiusY="1" >
                    <GradientStop Color="White" Offset="0"></GradientStop>
                    <GradientStop Color="Green" Offset="0.65"></GradientStop>
                </RadialGradientBrush>
            </Ellipse.Fill>
        </Ellipse>
    </Grid>
</Window>

