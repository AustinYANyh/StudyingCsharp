<Window x:Class="DriverTreeDemo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DriverTreeDemo"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <ComboBox x:Name="DriveInfos" Height="50" VerticalAlignment="Top" SelectionChanged="DriveInfos_SelectionChanged" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontSize="25"></ComboBox>
        </Grid>
        <TreeView x:Name="FileTree" Grid.Row="1" FontSize="21"></TreeView>
    </Grid>
</Window>
